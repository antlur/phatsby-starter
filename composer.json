{
  "name": "antlur/capo-starter",
  "require": {
    "antlur/capo": "^0.3"
  },
  "scripts": {
    "dev": "php -S localhost:8000 -t public",
    "build": "./vendor/bin/capo build",
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php vendor/bin/capo package:discover --ansi"
    ],
    "post-update-cmd": [
      "@php vendor/bin/capo vendor:publish --tag=laravel-assets --ansi --force"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php vendor/bin/capo key:generate --ansi"
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "App\\": "src/app/"
    }
  }
}
